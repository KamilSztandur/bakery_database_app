@model BakeryManager.WebApp.Models.DiscountVM

@{
    ViewData["Title"] = "Register new discount";
}

<h2>Register new discount</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Money Threshold (PLN):
                <input asp-for="MoneyThreshold" class="form-control" />
                <span asp-validation-for="MoneyThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                %:
                <input asp-for="ValueInPercents" class="form-control" />
                <span asp-validation-for="ValueInPercents" class="text-danger"></span>
            </div>
            <div class="form-group">
                Description:
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Is active
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
